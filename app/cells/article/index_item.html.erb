<div class="article-row">
  <h2><%= link_to @article.title, article_path(@article) %></h2>
  <%= @article.company_name %>
  <% if @article.reporter_name %>/ <%= @article.reporter_name %><% end %>
  <div>
  <% @article.line_reviews.limit(3).each do |lr| %>
    <div class="review">
      <% lr.tags.each do |tag| %>
        <span class="label label-warning"><%= tag %></span>
      <% end %>
      <%= truncate(lr.text, length:80) %>
      <% if lr.involved_personally? %>
        <span>我是當事人</span>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
